<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F5F2EB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Trip Information"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="16dp"
        android:background="#111111"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Active Trip Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:radius="22dp"
                android:elevation="6dp">

                <RelativeLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Trip"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvScore"
                        android:text="98"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_below="@id/tvScore"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvScore"
                        android:text="(Current driving performance)"
                        android:textColor="#888888"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Map"
                        android:textAllCaps="false"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#EFEFEF"
                        android:textColor="#000"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Trip Details -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:radius="22dp"
                android:elevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tudive"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="12dp"/>

                    <!-- Row -->
                    <include
                        layout="@layout/trip_row"
                        android:id="@+id/rowDestination"/>

                    <include
                        layout="@layout/trip_row"
                        android:id="@+id/rowDistance"/>

                    <include
                        layout="@layout/trip_row"
                        android:id="@+id/rowSpeed"/>

                    <include
                        layout="@layout/trip_row"
                        android:id="@+id/rowArrival"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- AI Integration -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:radius="14dp"
                android:backgroundTint="#FFF1DC"
                android:layout_marginBottom="20dp">

            </androidx.cardview.widget.CardView>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Route"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:backgroundTint="#EFEFEF"
                    android:textColor="#000"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Trip"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:backgroundTint="#F05A3E"
                    android:textColor="#FFF"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
