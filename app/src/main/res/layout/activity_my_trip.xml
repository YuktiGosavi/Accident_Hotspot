<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        android:background="#232323"
        app:title="My Trip Information"
        app:titleTextColor="#ffffff"
        app:navigationIcon="@drawable/ic_back_arrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Active Trip Card -->
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Trip"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/performanceScore"
                    android:text="98"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:paddingTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Current driving performance)"
                    android:textSize="14sp"
                    android:textColor="#707070"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnViewMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Map"
                    android:layout_gravity="right"
                    android:background="#E8E8E8"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Trip Details Card -->
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:layout_marginTop="18dp"
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tudive"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:paddingBottom="10dp"/>

                <!-- Destination -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_users"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destination:"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123 Maple St."
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivback"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_back"/>
                </LinearLayout>

                <!-- Distance -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_car_gray"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14.5 Miles"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivback1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_back"/>
                </LinearLayout>

                <!-- Avg Speed -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_speed"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Speed:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42 mph"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivback2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_back"/>
                </LinearLayout>

                <!-- Arrival Time -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_time"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arrival Time:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:45 PM"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivback3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_back"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Warning Box -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="#FFF3CD"
                android:padding="14dp"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_warning_red"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Your Model 3's braking route is being monitored for real-time traffic alerts."
                    android:textColor="#B34100"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Edit Route"
                    android:background="@drawable/btn_white"
                    android:textColor="#000000"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="End Trip"
                    android:layout_marginStart="12dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_red"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
