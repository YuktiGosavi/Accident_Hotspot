<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6E3C7"
    android:orientation="vertical">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        android:background="#232323"
        app:title="Forgot Password"
        app:titleTextColor="#ffffff"
        app:navigationIcon="@drawable/ic_back" />


    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="20dp">

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20sp"
            android:radius="20dp"
            android:elevation="10dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter the 6-digit code sent to your email"
                    android:textSize="14sp"
                    android:textColor="#777"
                    android:layout_marginTop="6dp" />

                <!-- OTP Boxes -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <EditText android:id="@+id/otp1" style="@style/OtpBox"/>
                    <EditText android:id="@+id/otp2" style="@style/OtpBox"/>
                    <EditText android:id="@+id/otp3" style="@style/OtpBox"/>
                    <EditText android:id="@+id/otp4" style="@style/OtpBox"/>
                    <EditText android:id="@+id/otp5" style="@style/OtpBox"/>
                    <EditText android:id="@+id/otp6" style="@style/OtpBox"/>
                </LinearLayout>

                <!-- Resend -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvResend"
                    android:text="Resend OTP in 01:00"
                    android:textColor="#888"
                    android:layout_marginTop="15dp" />

                <!-- Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerify"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:text="VERIFY RESET LIST"
                    android:background="@drawable/logout_btn_bg"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLogin"
                    android:text="Back to Login"
                    android:textColor="#E14A32"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
