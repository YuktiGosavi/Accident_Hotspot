<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Toolbar Added -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        android:background="#232323"
        app:title="Calling Emergency Services"
        app:titleTextColor="#ffffff"
        app:navigationIcon="@drawable/ic_back"/>

    <!-- Big Phone Circle -->
    <LinearLayout
        android:id="@+id/phoneRing"
        android:layout_below="@id/toolbar"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="@drawable/circle_red_glow">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_call_black"
            android:tint="#000" />

    </LinearLayout>

    <!-- Calling Text -->
    <TextView
        android:id="@+id/txtCalling"
        android:layout_below="@id/phoneRing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calling..."
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#000" />

    <!-- Emergency Number -->
    <TextView
        android:id="@+id/txtEmergencyNumber"
        android:layout_below="@id/txtCalling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="911 (112)"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#E53935"
        android:layout_centerHorizontal="true" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_below="@id/txtEmergencyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Hotline"
        android:textSize="16sp"
        android:textColor="#555"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Timer -->
    <TextView
        android:id="@+id/txtCallTimer"
        android:layout_below="@id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:01:23"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Hold Time + Location Box -->
    <LinearLayout
        android:id="@+id/infoBox"
        android:layout_below="@id/txtCallTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_box"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Location:"
            android:layout_marginTop="9dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 St, Anytown, CA"
            android:textSize="14sp"
            android:textColor="#666" />

    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:paddingBottom="12dp">

        <!-- Mute -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_mic_off_btn"
                android:src="@drawable/ic_mic_off"
                android:tint="#000"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mute Call"
                android:textSize="14sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Hang Up -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_call_end_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_call_end"
                android:tint="#FFFFFF"
                android:background="@drawable/red_circle"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hang Up"
                android:textSize="14sp"
                android:textColor="#E53935"/>
        </LinearLayout>

        <!-- Add Contact -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_add_contacts_btn"
                android:src="@drawable/ic_add_contacts"
                android:tint="#000"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Contact"
                android:textSize="14sp"
                android:textColor="#000"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
