<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF"/>

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#D1D1D1" />

    <!-- Rounded corners -->
    <corners android:radius="10dp"/>

    <!-- Padding -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="12dp"
        android:bottom="12dp"/>
</shape>
